{
    "compilerOptions": 
    {
        "sourceMap": true,
        "noEmit": true,
        "incremental": true,
        "target": "es6",
        "module": "esNext",
        "jsx": "react-jsx",
        "lib": 
        [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "typeRoots": 
        [
            "./node_modules/@webgpu/types",
            "./node_modules/@types"
        ],
        "allowJs": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": 
    [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts"
    ],
    "exclude": 
    [
        "node_modules"
    ]
}
